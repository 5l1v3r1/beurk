#!/usr/bin/env python2

import sys, re, os.path

dependencies = ['libpam', 'libpcap', 'libssl', ]
lib_directories = ['/lib/', '/usr/lib/', ]

missing_dep = 0
for dependency in dependencies:
    for directory in lib_directories:
        if os.path.isfile(directory + dependency + '.so'):
            break
    else:
        sys.stderr.write("\nDependency not satisfied: %s" % dependency)
        missing_dep += 1
if missing_dep:
    sys.stderr.write("\n\n")
    sys.exit(1)

MAKEFILE_TEMPLATE = """
all: {libname}

{libname}:
    @echo "--> calling {libname} target"

clean:
    @echo "--> calling clean target"
"""

sys.exit(0)
